<h2><%= gettext "Show user" %></h2>

<ul>

  <li>
    <strong><%= gettext "Username" %>:</strong>
    <%= @user.username %>
  </li>

  <li>
    <strong><%= gettext "Email" %>:</strong>
    <%= @user.email %>
  </li>

</ul>

<span><%= link gettext("Back"), to: user_path(@conn, :index, @locale), class: "btn btn-default btn-xs" %></span>
<span><%= link gettext("Edit"), to: user_path(@conn, :edit, @locale, @user), class: "btn btn-default btn-xs" %></span>
